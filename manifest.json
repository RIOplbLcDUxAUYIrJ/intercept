{
  "manifest_version": 2,
  "name": "URL Interceptor",
  "version": "1",
  "description": "Intercepts specific URL requests and returns alternative content",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "URL Interceptor"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}